<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/green</item>
        <item name="android:textColorPrimary">@color/mid_black</item>
        <item name="android:textColorSecondary">@color/green</item>
        <!--<item name="colorButtonNormal">@color/black</item>-->
    </style>

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:textColor">@color/white_main</item>
        <item name="android:textColorPrimary">@color/white_main</item>
        <item name="android:textColorPrimaryInverse">@color/white_main</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white_main</item>

        <!-- Menu text-->
        <item name="actionMenuTextColor">@color/white_main</item>

        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="keyValueEntryKey">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="keyValueEntryValue">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="emptyMessage">
        <item name="android:textColor">#66000000</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>