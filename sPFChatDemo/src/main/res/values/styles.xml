<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_background</item>
    </style>

    <style name="PlainActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarPlain</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_background</item>
    </style>

    <style name="keyValueEntryKey">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="keyValueEntryValue">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="emptyMessage">
        <item name="android:textColor">#66000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="ActionBarPlain" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/highlight</item>
    </style>

</resources>