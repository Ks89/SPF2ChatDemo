<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/people_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dario Archetti"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:contentDescription="@string/people_action_profile"
            android:id="@+id/people_action_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_profile"/>

        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:contentDescription="@string/people_action_profile"
            android:id="@+id/people_action_poke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_poke"/>

        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:contentDescription="@string/people_action_profile"
            android:id="@+id/people_action_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/action_message"/>

    </LinearLayout>
</RelativeLayout>